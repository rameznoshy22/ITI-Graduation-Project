<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - لوحة المدرس</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --sidebar-width: 280px;
            --sidebar-collapsed-width: 80px;
            --primary-color: #4e73df;
            --primary-light: #e6e9ff;
            --secondary-color: #f8f9fc;
            --dark-color: #343a40;
            --dark-light: #5a5c69;
            --light-color: #f8f9fa;
            --text-color: #5a5c69;
            --text-light: #858796;
            --hover-color: #2e59d9;
            --success-color: #1cc88a;
            --info-color: #36b9cc;
            --warning-color: #f6c23e;
            --danger-color: #e74a3b;
            --transition: all 0.3s ease;
            --shadow-sm: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            --shadow-md: 0 0.5rem 1.5rem 0.25rem rgba(58, 59, 69, 0.2);
            --shadow-lg: 0 1rem 3rem rgba(0, 0, 0, 0.175);
            --border-radius: 0.5rem;
            --sidebar-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            background-color: var(--secondary-color);
            font-family: 'Tajawal', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text-color);
            overflow-x: hidden;
            min-height: 100vh;
            text-align: right;
        }

        /* Sidebar Styles */
        .sidebar {
            height: 100vh;
            width: var(--sidebar-width);
            position: fixed;
            top: 0;
            right: 0;
            background: linear-gradient(180deg, var(--dark-color), #1c1f23);
            padding-top: 20px;
            overflow-y: auto;
            box-shadow: var(--shadow-sm);
            z-index: 1000;
            transition: var(--sidebar-transition);
        }

        .sidebar-collapsed .sidebar {
            width: var(--sidebar-collapsed-width);
            overflow: hidden;
        }

        .sidebar-collapsed .sidebar-brand-text,
        .sidebar-collapsed .profile-name,
        .sidebar-collapsed .profile-role,
        .sidebar-collapsed .nav-link-text {
            display: none !important;
        }

        .sidebar-collapsed .sidebar-brand {
            justify-content: center;
        }

        .sidebar-collapsed .profile-img {
            width: 40px;
            height: 40px;
            margin-bottom: 0;
        }

        .sidebar-collapsed .nav-link {
            justify-content: center;
            padding: 0.75rem;
            margin-left: 0;
        }

            .sidebar-collapsed .nav-link i {
                margin-left: 0;
            }

        .sidebar-collapsed .main-content {
            margin-right: var(--sidebar-collapsed-width);
        }

        .sidebar-brand {
            text-align: center;
            padding: 1rem;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            transition: var(--sidebar-transition);
        }

        .sidebar-brand-text {
            color: #fff;
            font-size: 1.2rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            transition: var(--sidebar-transition);
        }

            .sidebar-brand-text i {
                margin-left: 10px;
                font-size: 1.5rem;
            }

        .profile-section {
            text-align: center;
            padding: 1rem;
            margin-bottom: 1.5rem;
            transition: var(--sidebar-transition);
        }

        .profile-img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 0.5rem;
            transition: var(--transition);
        }

        .profile-name {
            color: #fff;
            font-weight: 600;
            margin: 0.5rem 0 0.2rem;
            transition: var(--transition);
        }

        .profile-role {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.8rem;
            transition: var(--transition);
        }

        .nav-item {
            margin-bottom: 0.2rem;
            position: relative;
        }

        .nav-link {
            padding: 0.75rem 1.5rem;
            color: rgba(255, 255, 255, 0.8);
            border-radius: 30px 0 0 30px;
            margin-left: 1rem;
            transition: var(--transition);
            display: flex;
            align-items: center;
        }

            .nav-link:hover,
            .nav-link.active {
                background-color: rgba(255, 255, 255, 0.1);
                color: #fff;
            }

            .nav-link i {
                width: 20px;
                text-align: center;
                margin-left: 10px;
                font-size: 1.1rem;
            }

        .nav-link-text {
            transition: var(--sidebar-transition);
        }

        .nav-item.active::before {
            content: '';
            position: absolute;
            right: 0;
            top: 0;
            height: 100%;
            width: 4px;
            background-color: var(--primary-color);
            border-radius: 4px 0 0 4px;
        }

        /* Main Content Styles */
        .main-content {
            margin-right: var(--sidebar-width);
            padding: 20px;
            min-height: 100vh;
            transition: var(--sidebar-transition);
        }

        /* Top Navigation Bar */
        .top-navbar {
            background-color: #fff;
            box-shadow: var(--shadow-sm);
            padding: 0.75rem 1.5rem;
            position: sticky;
            top: 0;
            z-index: 999;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .toggle-sidebar-btn {
            background: none;
            border: none;
            color: var(--text-color);
            font-size: 1.25rem;
            cursor: pointer;
            transition: var(--transition);
        }

            .toggle-sidebar-btn:hover {
                color: var(--primary-color);
            }

        .user-dropdown .dropdown-toggle {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: var(--text-color);
            transition: var(--transition);
        }

            .user-dropdown .dropdown-toggle:hover {
                color: var(--primary-color);
            }

        .user-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            object-fit: cover;
            margin-left: 8px;
            border: 2px solid var(--primary-light);
        }

        .dropdown-menu {
            border: none;
            box-shadow: var(--shadow-md);
            border-radius: var(--border-radius);
            text-align: right;
            left: auto !important;
            right: 0 !important;
        }

        .dropdown-item {
            padding: 0.5rem 1.5rem;
            transition: var(--transition);
            text-align: right;
        }

            .dropdown-item i {
                width: 20px;
                text-align: center;
                margin-left: 10px;
            }

        /* Card Styles */
        .card {
            border: none;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
            margin-bottom: 1.5rem;
            transition: var(--transition);
            background-color: #fff;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-md);
            }

        .card-header {
            background-color: var(--primary-color);
            color: #fff;
            border-radius: var(--border-radius) var(--border-radius) 0 0 !important;
            padding: 1rem 1.5rem;
            font-weight: 600;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-header-secondary {
            background-color: var(--dark-light);
        }

        .card-header-success {
            background-color: var(--success-color);
        }

        .card-header-warning {
            background-color: var(--warning-color);
        }

        .card-header-danger {
            background-color: var(--danger-color);
        }

        .card-header-info {
            background-color: var(--info-color);
        }

        /* Button Styles */
        .btn {
            border-radius: 30px;
            font-weight: 600;
            padding: 0.5rem 1.25rem;
            transition: var(--transition);
            border: none;
        }

        .btn-primary {
            background-color: var(--primary-color);
        }

            .btn-primary:hover {
                background-color: var(--hover-color);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .btn-sm {
            padding: 0.35rem 0.75rem;
            font-size: 0.875rem;
        }

        .btn-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-icon i {
                margin-left: 5px;
            }

        /* Badge Styles */
        .badge {
            font-weight: 600;
            padding: 0.35rem 0.65rem;
            border-radius: 10rem;
        }

        .badge-primary {
            background-color: var(--primary-color);
        }

        .badge-success {
            background-color: var(--success-color);
        }

        .badge-warning {
            background-color: var(--warning-color);
        }

        .badge-danger {
            background-color: var(--danger-color);
        }

        .badge-info {
            background-color: var(--info-color);
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--hover-color);
            }

        /* Animation Classes */
        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        .slide-in {
            animation: slideIn 0.5s ease-out;
        }

        /* Utility Classes */
        .text-primary {
            color: var(--primary-color) !important;
        }

        .text-success {
            color: var(--success-color) !important;
        }

        .text-warning {
            color: var(--warning-color) !important;
        }

        .text-danger {
            color: var(--danger-color) !important;
        }

        .text-info {
            color: var(--info-color) !important;
        }

        .bg-primary-light {
            background-color: var(--primary-light);
        }

        .cursor-pointer {
            cursor: pointer;
        }

        .transition {
            transition: var(--transition);
        }

        /* Custom Components */
        .stat-card {
            border-right: 4px solid;
            transition: var(--transition);
        }

            .stat-card:hover {
                transform: translateY(-3px);
            }

        .stat-card-primary {
            border-right-color: var(--primary-color);
        }

        .stat-card-success {
            border-right-color: var(--success-color);
        }

        .stat-card-warning {
            border-right-color: var(--warning-color);
        }

        .stat-card-danger {
            border-right-color: var(--danger-color);
        }

        .stat-card-info {
            border-right-color: var(--info-color);
        }

        .stat-card .stat-value {
            font-size: 1.75rem;
            font-weight: 700;
        }

        .stat-card .stat-label {
            color: var(--text-light);
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-card .stat-icon {
            font-size: 2rem;
            opacity: 0.3;
            position: absolute;
            left: 1rem;
            top: 1rem;
        }

        /* RTL specific styles */
        .me-auto {
            margin-left: auto !important;
            margin-right: inherit !important;
        }

        .ms-auto {
            margin-right: auto !important;
            margin-left: inherit !important;
        }

        .me-1 {
            margin-left: 0.25rem !important;
            margin-right: inherit !important;
        }

        .ms-1 {
            margin-right: 0.25rem !important;
            margin-left: inherit !important;
        }

        .me-2 {
            margin-left: 0.5rem !important;
            margin-right: inherit !important;
        }

        .ms-2 {
            margin-right: 0.5rem !important;
            margin-left: inherit !important;
        }

        .pe-1 {
            padding-left: 0.25rem !important;
            padding-right: inherit !important;
        }

        .ps-1 {
            padding-right: 0.25rem !important;
            padding-left: inherit !important;
        }

        .pe-2 {
            padding-left: 0.5rem !important;
            padding-right: inherit !important;
        }

        .ps-2 {
            padding-right: 0.5rem !important;
            padding-left: inherit !important;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-brand">
            <div class="sidebar-brand-text">
                <i class="fas fa-chalkboard-teacher"></i>
                <span class="nav-link-text">منصة التعليم</span>
            </div>
        </div>

        <div class="profile-section">
            <img src="~/img/alaaphote.jpg" alt="Profile" class="profile-img"
                 onerror="this.onerror=null;this.src='/images/default-profile.png';">
            <h5 class="profile-name">علاء الدين</h5>
            <div class="profile-role">مدرس اول</div>
        </div>

        <nav class="mt-3">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i>
                        <span class="nav-link-text">الرئيسية</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Course" asp-action="Index">
                        <i class="fas fa-book-open"></i>
                        <span class="nav-link-text">الدورات</span>
                        <span class="badge bg-success me-auto">@(ViewData["CourseCount"] ?? 0)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Lesson" asp-action="Index">
                        <i class="fas fa-tasks"></i>
                        <span class="nav-link-text">الدروس</span>
                        <span class="badge bg-warning me-auto">@(ViewData["LessonCount"] ?? 0)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Revision" asp-action="Index">
                        <i class="fas fa-clipboard-check"></i>
                        <span class="nav-link-text">المراجعات</span>
                        <span class="badge bg-info me-auto">@(ViewData["RevisionCount"] ?? 0)</span>
                    </a>
                </li>
               
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Question" asp-action="Index">
                        <i class="fas fa-users"></i>
                        <span class="nav-link-text">الاسئلة</span>
                        <span class="badge bg-primary me-auto">@(ViewData["questionCount"] ?? 0)</span>

                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="exam" asp-action="Index">
                        <i class="fas fa-clipboard-check"></i>
                        <span class="nav-link-text">الامتحانات</span>
                        <span class="badge bg-info me-auto">@(ViewData["ExamCount"] ?? 0)</span>
                    </a>
                </li>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Assessment" asp-action="Index">
                        <i class="fas fa-clipboard-check"></i>
                        <span class="nav-link-text">الواجب</span>
                        <span class="badge bg-info me-auto">@(ViewData["AssessmentCount"] ?? 0)</span>
                    </a>
                </li>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Message" asp-action="Index">
                        <i class="fa-solid fa-message"></i>
                        <span class="nav-link-text">رسائل الصفحة</span>
                        <span class="badge bg-info me-auto">@(ViewData["messagesCount"] ?? 0)</span>

                    </a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Comments" asp-action="Index">
                        <i class="fa-solid fa-message"></i>
                        <span class="nav-link-text">الكومنتات </span>
                        <span class="badge bg-info me-auto">@(ViewData["CommentCount"] ?? 0)</span>

                    </a>

                </li>
                <li class="nav-item mt-4">
                    <a class="nav-link text-danger" asp-controller="Account" asp-action="SignOut">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="nav-link-text">تسجيل الخروج</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Top Navigation Bar -->
    <nav class="top-navbar navbar navbar-expand-lg navbar-light bg-white">
        <!-- Top navbar content remains the same -->
        <!-- ... -->
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">لوحة تحكم المدرب</h1>
                
            </div>

            <!-- Content Row -->
            <div class="row">
                <!-- Stats Cards -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card stat-card-primary h-100 py-2 slide-in">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        الدورات النشطة
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@(ViewData["CourseCount"] ?? 0)</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-book fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card stat-card-success h-100 py-2 slide-in" style="animation-delay: 0.1s;">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        إجمالي الطلاب
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@(ViewData["StudentCount"] ?? 0)</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card stat-card-info h-100 py-2 slide-in" style="animation-delay: 0.2s;">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        الدروس المنشأة
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@(ViewData["LessonCount"] ?? 0)</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-tasks fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card stat-card-warning h-100 py-2 slide-in" style="animation-delay: 0.3s;">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        المراجعات
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@(ViewData["RevisionCount"] ?? 0)</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-clipboard-check fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Area -->
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Sidebar toggle functionality
        const sidebarToggle = () => {
            const sidebarToggleBtn = document.getElementById('sidebarToggle');
            if (sidebarToggleBtn) {
                sidebarToggleBtn.addEventListener('click', function() {
                    document.body.classList.toggle('sidebar-collapsed');
                    localStorage.setItem('sidebarCollapsed', document.body.classList.contains('sidebar-collapsed'));
                });
            }

            // Initialize sidebar state
            if (localStorage.getItem('sidebarCollapsed') === 'true') {
                document.body.classList.add('sidebar-collapsed');
            }
        };

        // Active menu highlighting
        const highlightActiveMenu = () => {
            const currentUrl = window.location.pathname;
            document.querySelectorAll('.nav-link').forEach(link => {
                if (link.getAttribute('href') === currentUrl) {
                    link.classList.add('active');
                    link.closest('.nav-item').classList.add('active');
                }
            });
        };

        // Responsive sidebar handling
        const handleResponsiveSidebar = () => {
            const handleResize = () => {
                if (window.innerWidth < 992) {
                    document.body.classList.add('sidebar-collapsed');
                } else {
                    document.body.classList.remove('sidebar-collapsed');
                }
            };

            // Initial check
            handleResize();

            // Add resize listener
            window.addEventListener('resize', handleResize);
        };

        // Animate cards on scroll
        const animateCardsOnScroll = () => {
            const animateCards = () => {
                document.querySelectorAll('.card, .stat-card').forEach((card, index) => {
                    if (card.getBoundingClientRect().top < window.innerHeight - 100) {
                        card.classList.add('fade-in');
                        card.style.animationDelay = `${index * 0.1}s`;
                    }
                });
            };

            // Initial animation
            animateCards();

            // Add scroll listener
            window.addEventListener('scroll', animateCards);
        };

        // Initialize all functionality
        document.addEventListener('DOMContentLoaded', function() {
            sidebarToggle();
            highlightActiveMenu();
            handleResponsiveSidebar();
            animateCardsOnScroll();
        });
    </script>
    @RenderSection("Styles", required: false)

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>