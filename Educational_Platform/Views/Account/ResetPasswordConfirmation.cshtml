@{
    ViewData["Title"] = "تم تغيير كلمة المرور";
    @Html.Partial("~/Views/Shared/Styling.cshtml")
    Layout = "_AuthLayout";
}

<style>
    .fo {
        font-family: "Cairo", sans-serif;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row g-0 shadow-lg rounded overflow-hidden">
                <!-- Left side illustration column -->
                <div class="col-lg-6 d-none d-lg-flex bg-light fo">
                    <div class="d-flex flex-column justify-content-center align-items-center p-4 p-lg-5 h-100" dir="rtl">
                        <h4 class="mb-3 text-primary fw-bold fo">تم إعادة تعيين كلمة المرور بنجاح</h4>
                        <p class="text-muted mb-0 text-center">يمكنك الآن تسجيل الدخول باستخدام كلمة المرور الجديدة.</p>
                        <div class="mt-5">
                            <img src="~/img/Webinar-pana.png" height="400px" width="400px" alt="تم تغيير كلمة المرور بنجاح" />
                        </div>
                    </div>
                </div>

                <!-- Success message column -->
                <div class="col-lg-6">
                    <div class="card border-0 h-100">
                        <div class="btn-primary text-white text-center py-3">
                            <h3 class="mb-0 fo"><i class="fa fa-check-circle me-2"></i>تم تغيير كلمة المرور</h3>
                            <p class="small mb-0">لقد تم إعادة تعيين كلمة المرور الخاصة بك بنجاح</p>
                        </div>

                        <div class="card-body p-4 p-lg-5" dir="rtl">
                            <div class="text-center mb-4">
                                <div class="mb-3">
                                    <i class="fa fa-shield-alt fa-4x text-primary"></i>
                                </div>
                                <h4 class="fo fw-bold mb-3">تهانينا!</h4>
                                <p class="mb-3">
                                    لقد تم إعادة تعيين كلمة المرور الخاصة بك بنجاح.
                                    يمكنك الآن تسجيل الدخول إلى حسابك باستخدام كلمة المرور الجديدة.
                                </p>

                                <div class="alert alert-info mt-4">
                                    <i class="fa fa-info-circle me-2"></i>
                                    <span>حافظ على أمان كلمة المرور الخاصة بك ولا تشاركها مع أي شخص.</span>
                                </div>
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <a asp-action="Login" asp-controller="Account" class="btn btn-primary btn-lg py-3 fo">
                                    <i class="fa fa-sign-in-alt me-2"></i>تسجيل الدخول الآن
                                </a>
                            </div>
                        </div>

                        <div class="card-footer bg-light py-4 text-center">
                            <p class="fo mb-0">
                                <i class="fa fa-question-circle me-1"></i>
                                هل تحتاج إلى مساعدة؟ <a href="#">اتصل بفريق الدعم</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>