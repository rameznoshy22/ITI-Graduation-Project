@model Educational_Platform.ViewModel.ForgotPasswordViewModel

@{
    ViewData["Title"] = "نسيت كلمة المرور";
    @Html.Partial("~/Views/Shared/Styling.cshtml")
    Layout = "_AuthLayout";
}

<style>
    .fo {
        font-family: "Cairo", sans-serif;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row g-0 shadow-lg rounded overflow-hidden">
                <!-- Left side illustration column -->
                <div class="col-lg-6 d-none d-lg-flex bg-light fo">
                    <div class="d-flex flex-column justify-content-center align-items-center p-4 p-lg-5 h-100" dir="rtl">
                        <h4 class="mb-3 text-primary fw-bold fo">استعادة كلمة المرور</h4>
                        <p class="text-muted mb-0 text-center">سنرسل لك رابطًا لإعادة تعيين كلمة المرور الخاصة بك.</p>
                        <div class="mt-5">
                            <img src="~/img/Webinar-pana.png" height="400px" width="400px" alt="نسيت كلمة المرور" />
                        </div>
                    </div>
                </div>

                <!-- Forgot password form column -->
                <div class="col-lg-6">
                    <div class="card border-0 h-100">
                        <div class="btn-primary text-white text-center py-3">
                            <h3 class="mb-0 fo"><i class="fa fa-key me-2"></i>استعادة كلمة المرور</h3>
                            <p class="small mb-0">أدخل بريدك الإلكتروني لإرسال رابط إعادة التعيين</p>
                        </div>

                        <div class="card-body p-4 p-lg-5">
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                    <i class="fa fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                                    <i class="fa fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
                                <div asp-validation-summary="All" class="text-danger mb-3 small"></div>
                                <div class="mb-4" dir="rtl">
                                    <label asp-for="Email" class="form-label fw-semibold"><i class="fa fa-envelope me-1"></i> عنوان البريد الإلكتروني</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fa fa-envelope"></i></span>
                                        <input asp-for="Email" class="form-control form-control-lg" placeholder="name@example.com" autocomplete="email" data-field="required" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="d-grid gap-2 mb-4">
                                    <button type="submit" class="btn btn-primary btn-lg py-3 fo">
                                        <i class="fa fa-paper-plane me-2"></i>إرسال رابط الاستعادة
                                    </button>
                                </div>
                            </form>
                        </div>

                        <div class="card-footer bg-light py-4 text-center fo">
                            <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center">
                                <a asp-action="Login" asp-controller="Account" class="btn btn-outline-primary">
                                    <i class="fa fa-arrow-right me-1"></i>العودة إلى تسجيل الدخول
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}