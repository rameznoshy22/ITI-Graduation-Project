@{
    ViewData["Title"] = "تأكيد طلب استعادة كلمة المرور";
    @Html.Partial("~/Views/Shared/Styling.cshtml")
    Layout = "_AuthLayout";
}

<style>
    .fo {
        font-family: "Cairo", sans-serif;
    }

    /* إضافة خاصيات مخصصة للقسم الأيسر */
    .rtl-content {
        text-align: center;
        padding: 2rem;
        width: 100%;
    }

        .rtl-content h4,
        .rtl-content p {
            width: 100%;
            max-width: 90%;
            margin-right: auto;
            margin-left: auto;
        }

    /* تعديل حجم الصورة للتأكد من أنها تناسب المساحة */
    .responsive-img {
        max-width: 100%;
        height: auto;
        object-fit: contain;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row g-0 shadow-lg rounded overflow-hidden">
                <!-- Left side illustration column -->
                <div class="col-lg-6 d-none d-lg-flex bg-light fo">
                    <div class="rtl-content d-flex flex-column justify-content-center align-items-center h-100">
                        <h4 class="mb-3 text-primary fw-bold fo">تم إرسال بريد إلكتروني لاستعادة كلمة المرور</h4>
                        <p class="text-muted mb-0">يرجى التحقق من صندوق الوارد الخاص بك للحصول على تعليمات إعادة تعيين كلمة المرور.</p>
                        <div class="mt-5">
                            <img src="~/img/Webinar-pana.png" class="responsive-img" alt="تم إرسال البريد الإلكتروني" />
                        </div>
                    </div>
                </div>

                <!-- Confirmation message column -->
                <div class="col-lg-6">
                    <div class="card border-0 h-100">

                        <div class="btn-primary text-white text-center py-3">
                            <h3 class="mb-0 fo"><i class="fa fa-check-circle me-2"></i>تم إرسال طلبك</h3>
                            <p class="small mb-0">تحقق من بريدك الإلكتروني للخطوات التالية</p>
                        </div>

                        <div class="card-body p-4 p-lg-5" dir="rtl">
                            <div class="text-center mb-4">
                                <div class="mb-3">
                                    <i class="fa fa-envelope fa-4x text-primary"></i>
                                </div>
                                <h4 class="fo fw-bold mb-3">تم إرسال رابط استعادة كلمة المرور</h4>
                            </div>

                            <div class="alert alert-info mt-4">
                                <i class="fa fa-info-circle me-2"></i>
                                <span>إذا لم تستلم البريد الإلكتروني في غضون بضع دقائق، يرجى التحقق من مجلد الرسائل غير المرغوب فيها (البريد المزعج).</span>
                            </div>

                            <div class="mt-4">
                                <p class="mt-3">
                                    إذا كنت لا تزال تواجه مشكلة، يمكنك <a asp-action="ForgotPassword" asp-controller="Account">المحاولة مرة أخرى</a>
                                    أو <a href="#">الاتصال بالدعم</a>.
                                </p>
                            </div>
                        </div>

                        <div class="card-footer bg-light py-4 text-center fo">
                            <a asp-action="Login" asp-controller="Account" class="btn btn-outline-primary">
                                <i class="fa fa-arrow-right me-1"></i>العودة إلى تسجيل الدخول
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>