@using Educational_Platform.Models  
@model IEnumerable<Instructor>  

@{
    ViewData["Title"] = "بروفايل";
    @Html.Partial("~/Views/Shared/Styling.cshtml")


}
<div class="" >
<div class="col-md-9 p-5">
        <div class="card shadow-lg border-0 rounded-4 bg-white" dir="rtl">
        <div class="card-body">

            @foreach (var instructor in Model)
            {
               

                <div class="row align-items-center mt-4">
                    <div class="col-md-4 text-center">
                        <img src="~/img/team-1.jpg"
                             alt="صورة المدرس"
                             class="rounded-circle shadow"
                             style="width: 180px; height: 180px; object-fit: cover; border: 5px solid #f0f0f0;"
                             onerror="this.onerror=null;this.src='https://via.placeholder.com/180?text=No+Image';" />
                    </div>

                    <div class="col-md-8">
                            <div class="text-center mb-4">
                                <h2 class="text-primary mb-3">
                                    👋 مرحبا بعودتك
                                </h2>
                                <p class="lead text-muted">م/ @instructor.Name!</p>
                                <hr class="my-4 w-50 mx-auto" />

                            </div>

                        <div class="bg-light p-4 rounded-3">
                            <p><i class="fas fa-graduation-cap text-primary"></i> <strong>المؤهلات:</strong> @instructor.Qualifications</p>
                            <p><i class="fas fa-book text-success"></i> <strong>المواد التي تقوم بتدريسها:</strong> @instructor.Subjects</p>
                            <p><i class="fas fa-align-left text-warning"></i> <strong>نبذة عنك:</strong> @instructor.Bio</p>
                            <p><i class="fas fa-envelope text-danger"></i> <strong>البريد الإلكتروني:</strong> @instructor.Email</p>
                            <p><i class="fas fa-phone-alt text-info"></i> <strong>رقم الهاتف:</strong> @instructor.PhoneNumber</p>
                        </div>
                            <div class="text-center mt-3">
                                <a href="#" class="btn btn-outline-primary px-4 py-2">
                                    <i class="fas fa-edit"></i> تعديل الملف الشخصي
                                </a>
                            </div>
                    </div>
                        
                </div>

              
            }

        </div>
    </div>
    </div>
</div>
    </div>