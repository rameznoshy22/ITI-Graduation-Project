@model StudentProfileViewModel
@{
    ViewData["Title"] = "Student Profile";
    @Html.Partial("~/Views/Shared/Styling.cshtml")
    Layout = null;
    @Html.Partial("~/Views/Shared/_Header.cshtml")
}
<style>
    .fo {
        font-family: "Cairo", sans-serif;
    }

    .profile-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        margin-bottom: 1rem;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 4px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

        .profile-image:hover {
            transform: scale(1.08);
            border-color: rgba(78, 115, 223, 0.5);
            box-shadow: 0 8px 25px rgba(78, 115, 223, 0.3);
        }

    .student-info {
        background-color: var(--secondary-color);
        padding: 20px;
        border-radius: 12px;
        box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.05);
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        transition: all 0.4s ease;
        border: none;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 0.5rem 2rem rgba(58, 59, 69, 0.2);
        }

    .card-header {
        font-weight: bold;
        background-color: var(--primary-color);
        color: white;
        border-bottom: none;
        padding: 1.25rem 1.5rem;
    }

    .list-group-item {
        transition: all 0.3s ease;
        border-left: none;
        border-right: none;
        padding: 1.25rem 1.5rem;
        border-color: rgba(0, 0, 0, 0.05);
    }

        .list-group-item:first-child {
            border-top: none;
        }

        .list-group-item:hover {
            background-color: rgba(78, 115, 223, 0.08);
            transform: translateX(5px);
        }

    .progress-circle {
        position: relative;
        width: 120px;
        height: 120px;
        margin: 0 auto;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.4s ease;
    }

        .progress-circle:hover {
            transform: scale(1.1);
        }

        .progress-circle::before {
            content: "";
            position: absolute;
            width: 90px;
            height: 90px;
            border-radius: 50%;
            background: white;
            box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
        }

    .progress-value {
        position: relative;
        font-size: 1.5rem;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .progress-circle:hover .progress-value {
        transform: scale(1.1);
    }

    .motivational-quote {
        font-size: 1.1rem;
        line-height: 1.6;
        padding: 15px;
        background-color: rgba(78, 115, 223, 0.1);
        border-left: 4px solid var(--primary-color);
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .motivational-quote:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(78, 115, 223, 0.1);
        }

    .empty-state {
        padding: 3rem 2rem;
        text-align: center;
        color: #6c757d;
        background-color: rgba(248, 249, 252, 0.5);
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .empty-state:hover {
            background-color: rgba(248, 249, 252, 0.8);
            transform: translateY(-3px);
        }

        .empty-state i {
            font-size: 3.5rem;
            margin-bottom: 1rem;
            color: #e9ecef;
            transition: all 0.3s ease;
        }

        .empty-state:hover i {
            color: var(--primary-color);
            transform: scale(1.1);
        }

    .btn-primary {
        background-color: var(--primary-color);
        border: none;
        box-shadow: 0 4px 15px rgba(78, 115, 223, 0.3);
        transition: all 0.3s ease;
        padding: 0.5rem 1.25rem;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: var(--primary-color);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(78, 115, 223, 0.4);
        }

    .btn-outline-primary {
        transition: all 0.3s ease;
        border-radius: 8px;
    }

        .btn-outline-primary:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(78, 115, 223, 0.3);
        }

    .table-hover tbody tr {
        transition: all 0.2s ease;
    }

        .table-hover tbody tr:hover {
            background-color: rgba(78, 115, 223, 0.05);
            transform: translateX(5px);
        }

    .badge {
        padding: 0.5em 0.8em;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .badge:hover {
            transform: scale(1.05);
        }


    .sidebar-responsive .card {
        animation: float 6s ease-in-out infinite;
    }

    @@media (max-width: 991.98px) {
        .sidebar-responsive {
            width: 100% !important;
            position: relative !important;
            top: auto !important;
            margin-top: 20px;
            order: -1 !important;
        }

        .profile-image {
            width: 120px;
            height: 120px;
        }

        .student-info {
            text-align: center !important;
        }

            .student-info .d-flex {
                justify-content: center !important;
            }
    }

    @@media (max-width: 767.98px) {
        .progress-circle {
            width: 100px;
            height: 100px;
        }

            .progress-circle::before {
                width: 70px;
                height: 70px;
            }

        .progress-value {
            font-size: 1.2rem;
        }
    }

    }</style>
<div class="container py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-12 col-md-4 order-md-2 sidebar-responsive mb-5">
            <div class="card shadow-sm sticky-md-top" style="top: 20px;">
                <div class="card-body text-center">
                    @if (string.IsNullOrEmpty(Model.CurrentProfilePicture))
                    {
                        <img src="~/files/studentImage/مجهول.png"
                             class="profile-image rounded-circle border border-4 border-light shadow"
                             alt="صورة الطالب"
                             onerror="this.onerror=null;this.src='https://via.placeholder.com/150?text=No+Image';" />
                    }
                    else
                    {
                        <img src="~/files/studentImage/@Model.CurrentProfilePicture"
                             class="profile-image rounded-circle border border-4 border-light shadow"
                             alt="صورة الطالب"
                             onerror="this.onerror=null;this.src='https://via.placeholder.com/150?text=No+Image';" />
                    }

                    <h4 class="mb-2 fo">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted mb-3">⭐أجمد طالب ثانوية عامة⭐</p>

                    <div class="student-info text-start mt-4" style="direction: rtl;">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-envelope me-2 text-primary p-2"></i>
                            <span>@Model.Email</span>
                        </div>

                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-user-graduate me-2 text-primary p-2"> </i>
                            <span>@Model.GradeLevel</span>
                        </div>

                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-phone-alt me-2 text-primary p-2"></i>
                            <span>@Model.PhoneNumber</span>
                        </div>

                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center mt-4">
                            <a asp-controller="Student" asp-action="UpdateProfile" class="btn btn-primary fo w-100">
                                <i class="fas fa-edit me-2"></i> تعديل الملف الشخصي
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content col-lg-8 col-12 order-lg-1">
            <!-- Progress Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0 fo text-white" style="direction:rtl;">
                        <i class="fas fa-chart-line me-2"></i> مستوى تقدمك
                    </h5>
                </div>

                <div class="card-body">
                    <div class="motivational-quote fo text-center mb-4">
                        ⭐ كل لحظة تركّز فيها دلوقتي، بتقربك من حلمك الكبير... اجتهد، وخلّي تعبك يوصلك لهدفك ⭐
                    </div>

                    <div class="row text-center">
                        <!-- Average Results -->
                        <div class="col-md-4 mb-4">
                            @{
                                var assementCount = Model.AssessmentResults.Count;
                                var assemenstProgress = assementCount > 0 ? 100 : 0;
                            }
                            <div class="progress-circle" style="background: conic-gradient(var(--danger-color) @(assemenstProgress)%, transparent @(assemenstProgress)%);">
                                <span class="progress-value" style="color:var(--danger-color)">
                                    @assementCount
                                </span>
                            </div>
                            <h6 class="metric-title fo" style="margin-top: 15px;">الواجبات المكتملة</h6>
                        </div>


                        <!-- Completed Exams -->
                        <div class="col-md-4 mb-4">
                            @{
                                var examsCount = Model.ExamResults.Count;
                                var examsProgress = examsCount > 0 ? 100 : 0;
                            }
                            <div class="progress-circle" style="background: conic-gradient(var(--danger-color) @(examsProgress)%, transparent @(examsProgress)%);">
                                <span class="progress-value" style="color:var(--danger-color)">
                                    @examsCount
                                </span>
                            </div>
                            <h6 class="metric-title fo" style="margin-top: 15px;">الامتحانات المكتملة</h6>
                        </div>

                        <!-- Enrolled Courses -->
                        <div class="col-md-4 mb-4">
                            @{
                                var coursesCount = Model.EnrolledCourses.Count;
                                var coursesProgress = coursesCount > 0 ? 100 : 0;
                            }
                            <div class="progress-circle" style="background: conic-gradient(var(--primary-color) @(coursesProgress)%, transparent @(coursesProgress)%);">
                                <span class="progress-value" style="color:var(--primary-color)">
                                    @coursesCount
                                </span>
                            </div>
                            <h6 class="metric-title fo" style="margin-top: 15px;">الدورات المسجلة</h6>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Enrolled Courses -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0 text-white fo" style="direction:rtl;">
                        <i class="fas fa-book-open me-2"></i> الدورات المسجلة
                    </h5>
                </div>

                <div class="card-body">
                    @if (Model.EnrolledCourses != null && Model.EnrolledCourses.Any())
                    {
                        <div class="list-group">
                            @foreach (var course in Model.EnrolledCourses)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center" style="direction:rtl">
                                    <div class="d-flex align-items-center">
                                        <img src="~/files/imgCourse/@course.Image" alt="@course.Title" style="width: 60px; height: 60px; object-fit: cover; border-radius: 4px; margin-left: 15px;">
                                        <div>
                                            <h6 class="mb-0 fo">@course.Title</h6>
                                            <small class="text-muted">@course.Description</small>
                                        </div>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Course" asp-action="DetailsWithLessons" asp-route-id="@course.ID"
                                           class="btn btn-sm btn-outline-primary fo">
                                            <i class="fas fa-play-circle me-1"></i> المحتوى
                                        </a>
                                        <a asp-controller="Student" asp-action="AvailableExams" asp-route-courseId="@course.ID"
                                           class="btn btn-sm btn-outline-success fo">
                                            <i class="fas fa-file-alt me-1"></i> الامتحانات
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-book-open"></i>
                            <h5 class="fo">لا توجد دورات مسجلة</h5>
                            <p class="text-muted">يمكنك تصفح الدورات المتاحة وتسجيل في أي دورة تريدها</p>
                            <a asp-controller="Home" asp-action="Courses" class="btn btn-primary fo">
                                <i class="fas fa-search me-1"></i> استكشاف الدورات
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Exam Results -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0 text-white fo" style="direction:rtl;">
                        <i class="fas fa-file-alt me-2"></i> نتائج الامتحانات
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.ExamResults.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped" style="direction:rtl;">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-end">الدورة</th>
                                        <th class="text-end">عنوان الامتحان</th>
                                        <th class="text-center">الإجابات الصحيحة</th>
                                        <th class="text-center">النسبة</th>
                                        <th class="text-center">الحالة</th>
                                        <th class="text-center">التاريخ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in Model.ExamResults.OrderByDescending(r => r.ExamDate))
                                    {
                                        <tr>
                                            <td class="text-end">
                                                <div class="fo">@result.CourseTitle</div>
                                            </td>
                                            <td class="text-end">@result.ExamTitle</td>
                                            <td class="text-center">
                                                <span class="badge bg-@(result.Percentage >= 50 ? "success" : "danger")">
                                                    @result.CorrectAnswers / @result.TotalQuestions
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                @result.Percentage.ToString("0.00")%
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-@(result.Percentage >= 50 ? "success" : "danger")">
                                                    @(result.Percentage >= 50 ? "ناجح" : "راسب")
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                @result.ExamDate.ToString("yyyy/MM/dd")
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-file-alt"></i>
                            <h5 class="fo">لا توجد نتائج امتحانات</h5>
                            <p class="text-muted">عند إجراء أي امتحان، ستظهر نتائجك هنا</p>
                            <a asp-controller="Student" asp-action="AvailableExams" class="btn btn-primary fo">
                                <i class="fas fa-file-alt me-1"></i> عرض الامتحانات المتاحة
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Assessment Results -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0 text-white fo" style="direction:rtl;">
                        <i class="fas fa-clipboard-check me-2"></i> عرض نتائج الواجبات
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.AssessmentResults.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped" style="direction:rtl;">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-end">الدورة / الدرس</th>
                                        <th class="text-end">عنوان الواجب</th>
                                        <th class="text-center">الإجابات الصحيحة</th>
                                        <th class="text-center">النسبة</th>
                                        <th class="text-center">الحالة</th>
                                        <th class="text-center">تاريخ التسليم</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in Model.AssessmentResults.OrderByDescending(r => r.AssessmentDate))
                                    {
                                        <tr>
                                            <td class="text-end">
                                                <div class="d-flex align-items-center justify-content-end">
                                                    <div>
                                                        <div class="fo">@result.CourseTitle</div>
                                                        @if (!string.IsNullOrEmpty(result.LessonTitle))
                                                        {
                                                            <small class="text-muted">@result.LessonTitle</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end">@result.AssessmentTitle</td>
                                            <td class="text-center">
                                                <span class="badge bg-@(result.Percentage >= 50 ? "success" : "danger")">
                                                    @result.CorrectAnswers / @result.TotalQuestions
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                @result.Percentage.ToString("0.00")%
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-@(result.Percentage >= 50 ? "success" : "danger")">
                                                    @(result.Percentage >= 50 ? "ناجح" : "راسب")
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                @result.AssessmentDate.ToString("yyyy/MM/dd")
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-clipboard-check"></i>
                            <h5 class="fo">لا توجد نتائج واجبات</h5>
                            <p class="text-muted">عند تسليم أي واجب، ستظهر نتائجك هنا</p>
                            <a asp-controller="Student" asp-action="AvailableAssessments" class="btn btn-primary fo">
                                <i class="fas fa-clipboard-list me-1"></i> عرض الواجبات المتاحة
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animate progress circles
        const circles = document.querySelectorAll('.progress-circle');
        circles.forEach(circle => {
            const progress = circle.getAttribute('data-progress');
            circle.style.setProperty('--progress', `${progress}%`);
        });

        // Add smooth scrolling to all links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Add counting animation to progress values
        const progressValues = document.querySelectorAll('.progress-value');
        progressValues.forEach(valueElement => {
            const target = parseInt(valueElement.textContent);
            if (target > 0) {
                let current = 0;
                const increment = target / 20;
                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        clearInterval(timer);
                        current = target;
                    }
                    valueElement.textContent = Math.round(current);
                }, 50);
            }
        });
    });
</script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
